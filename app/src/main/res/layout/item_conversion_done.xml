<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/background_image_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <View
            android:id="@+id/background_fade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:alpha="0.7"
            android:background="@color/black" />

        <View
            android:id="@+id/gradient_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_bottom" />

        <View
            android:id="@+id/gradient_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@drawable/gradient_top" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="...03123.JPG to ...03231.PNG"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/image_preview"
        app:layout_constraintTop_toTopOf="@id/image_preview" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:20:32 10.08.21 "
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:singleLine="true"
        app:iconGravity="textStart"
        android:text="C:\\usr\\Sng\\AndrSt\\12345.png"
        android:textAllCaps="false"
        app:icon="@drawable/outline_folder_open_24"
        app:iconSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/status" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="DONE"
        app:icon="@drawable/outline_check_24"
        app:iconSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintRight_toRightOf="@id/button_share"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        app:icon="@android:drawable/ic_menu_share"
        app:iconSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/status" />

</androidx.constraintlayout.widget.ConstraintLayout>